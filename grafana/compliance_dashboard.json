{
  "dashboard": {
    "id": null,
    "title": "ðŸ“‹ Compliance & Regulatory Monitor",
    "tags": ["compliance", "soc2", "gdpr", "hipaa", "pci-dss"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5m",
    "time": { "from": "now-7d", "to": "now" },
    "panels": [
